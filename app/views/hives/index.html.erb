<%= link_to "Add Hive", new_hive_path %>

<table>
  <thead>
    <tr>
      <th>Hive Name</th>
      <th>Address</th>
      <th>Population Size</th>
    </tr>
  </thead>
  <tbody>
    <% @hives.each do |hive| %>
      <tr>
        <td><%= link_to hive.name, hive_path(hive) %></td>
        <td><%= hive.addresses.first.try(:street) %></td>
        <td><%= hive.population_size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
